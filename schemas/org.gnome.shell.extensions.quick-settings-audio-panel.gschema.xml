<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.quick-settings-audio-panel" path="/org/gnome/shell/extensions/quick-settings-audio-panel/">
    <key name="version" type="i">
      <default>1</default>
    </key>

    <key name="panel-type" type="s">
      <choices>
        <choice value="independent-panel" />
        <choice value="merged-panel" />
        <choice value="separate-indicator" />
      </choices>
      <default>"independent-panel"</default>
    </key>
    <key name="merged-panel-position" type="s">
      <choices>
        <choice value="top" />
        <choice value="bottom" />
      </choices>
      <default>"bottom"</default>
    </key>

    <key name="always-show-input-volume-slider" type="b">
      <default>false</default>
    </key>
    <key name="ignore-virtual-capture-streams" type="b">
      <default>false</default>
    </key>
    <key name="remove-output-volume-slider" type="b">
      <default>false</default>
    </key>
    <key name="master-volume-sliders-show-current-device" type="b">
      <default>false</default>
    </key>
    <key name="add-button-applications-output-reset-to-default" type="b">
      <default>false</default>
    </key>

    <key name="ignore-css" type="b">
      <default>false</default>
    </key>
    <key name="pactl-path" type="s">
      <default>""</default>
    </key>

    <key name="widgets-order" type="as">
      <default>["profile-switcher", "output-volume-slider", "perdevice-volume-sliders", "balance-slider", "input-volume-slider", "mpris-controllers", "applications-volume-sliders"]</default>
    </key>

    <!-- Widgets options -->
    <key name="create-profile-switcher" type="b">
      <default>false</default>
    </key>
    <key name="autohide-profile-switcher" type="b">
      <default>true</default>
    </key>

    <key name="move-output-volume-slider" type="b">
      <default>true</default>
    </key>
    <key name="move-input-volume-slider" type="b">
      <default>true</default>
    </key>

    <key name="create-perdevice-volume-sliders" type="b">
      <default>false</default>
    </key>
    <key name="perdevice-volume-sliders-filter-mode" type="s">
      <choices>
        <choice value="blacklist" />
        <choice value="whitelist" />
      </choices>
      <default>"blacklist"</default>
    </key>
    <key name="perdevice-volume-sliders-filters" type="as">
      <default>[]</default>
    </key>

    <key name="create-balance-slider" type="b">
      <default>false</default>
    </key>

    <key name="create-mpris-controllers" type="b">
      <default>true</default>
    </key>
    <key name="mpris-controllers-are-moved" type="b">
      <default>true</default>
    </key>

    <key name="create-applications-volume-sliders" type="b">
      <default>true</default>
    </key>
    <key name="group-applications-volume-sliders" type="b">
      <default>false</default>
    </key>
    <key name="applications-volume-sliders-filter-mode" type="s">
      <choices>
        <choice value="blacklist" />
        <choice value="whitelist" />
      </choices>
      <default>"blacklist"</default>
    </key>
    <key name="applications-volume-sliders-filters" type="as">
      <default>[]</default>
    </key>
  </schema>
</schemalist>